!
! make caps_lock an additional control
clear Lock
! NOTE: this keycode may need to be changed for your control
keycode 66 = Control_L
add Control = Control_L

!
! make escape be caps_lock
!keysym Escape = Caps_Lock
!add Lock = Caps_Lock

!
! make a fake escape key (so we can map it with xcape)
keycode 999 = Escape

!
! make a fake capslock key (so we can map it with xcape)
keycode 996 = Caps_Lock


! additional mappings

! 
! make a fake capslock key (so we can map it with xcape)
keycode 993 = Home

! keycode 990 = F12
!
! swap grave and asciitilde (` and ~)
! keycode  49 = asciitilde grave asciitilde grave

! map alt_l to F12 to be mapped in tmux
remove mod1 = Alt_R
keycode 108 = F12 F12 F12 F12 F12

remove mod1 = Alt_L
remove mod4 = Super_L
keycode 64 = Super_L  NoSymbol Super_L
keycode 133 = Alt_L Meta_L Alt_L Meta_L
add mod1 = Alt_L
add mod4 = Super_L
